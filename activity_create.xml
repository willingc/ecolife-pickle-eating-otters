<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.guest_mac.ecolife.createActivity">



<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/ScrollView01"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:scrollbars="vertical">
<LinearLayout
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:layout_height="fill_parent">
    <TextView
        android:id="@+id/TextViewTitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textSize="9pt">
    </TextView>
    <EditText
        android:id="@+id/EditTextName"
        android:layout_height="wrap_content"
        android:hint=""
        android:inputType="textPersonName"
        android:layout_width="fill_parent">
    </EditText>
    <TextView
        android:id="@+id/TextViewTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textSize="9pt">
    </TextView>
    <EditText
        android:id="@+id/EditTextName1"
        android:layout_height="wrap_content"
        android:hint=""
        android:inputType="textPersonName"
        android:layout_width="fill_parent">
    </EditText>
    <TextView
        android:id="@+id/TextViewTitle4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Residents in Family                                          "
        android:textSize="9pt">
    </TextView>
    <EditText
        android:id="@+id/EditTextName4"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_width="fill_parent">
    </EditText>
    <TextView
        android:id="@+id/TextViewTitle4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stove Serial Number                                          "
        android:textSize="9pt">
    </TextView>
    <EditText
        android:id="@+id/EditTextName2"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_width="fill_parent">

    </EditText>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/send"
        android:layout_width="195dp"
        android:layout_height="38dp"
        android:text="Send"
        android:textColor="@color/colorPrimary"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="208dp"
        android:layout_gravity="center"/>

</LinearLayout>
</ScrollView>
</android.support.constraint.ConstraintLayout>
